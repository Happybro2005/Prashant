<body>
  <div class="container" id="container">
    <h1>Are you Salaried or Business?</h1>
    <div class="btn-group" id="btnGroup">
      <button id="salariedBtn" type="button">Salaried</button>
      <button id="businessBtn" type="button">Business</button>
    </div>
    <div id="result"></div>
  </div>

  <script>
    const salariedBtn = document.getElementById('salariedBtn');
    const businessBtn = document.getElementById('businessBtn');
    const container = document.getElementById('container');

    function calculateCumulativeTax(salary) {
      const slabs = [
        { limit: 400000, rate: 0 },
        { limit: 800000, rate: 0.05 },
        { limit: 1200000, rate: 0.10 },
        { limit: 1600000, rate: 0.15 },
        { limit: 2000000, rate: 0.20 },
        { limit: 2400000, rate: 0.25 },
        { limit: Infinity, rate: 0.30 }
      ];

      let tax = 0;
      let prevLimit = 0;

      for (let i = 0; i < slabs.length; i++) {
        const slab = slabs[i];
        if (salary > slab.limit) {
          const taxableAmount = slab.limit - prevLimit;
          tax += taxableAmount * slab.rate;
          prevLimit = slab.limit;
        } else {
          const taxableAmount = salary - prevLimit;
          if (taxableAmount > 0) {
            tax += taxableAmount * slab.rate;
          }
          break;
        }
      }
      return tax;
    }

    salariedBtn.addEventListener('click', () => {
      container.innerHTML = `
        <h1>Enter your Salary (in Rs)</h1>
        <form id="salaryForm">
          <input type="number" id="salaryInput" placeholder="Enter your salary" min="0" required />
          <button type="submit">Submit</button>
        </form>
        <div id="taxMessage"></div>
      `;

      const salaryForm = document.getElementById('salaryForm');
      const salaryInput = document.getElementById('salaryInput');
      const taxMessage = document.getElementById('taxMessage');

      salaryForm.addEventListener('submit', (e) => {
        e.preventDefault();
        const salaryValue = Number(salaryInput.value.trim());
        if (salaryInput.value === '' || isNaN(salaryValue) || salaryValue < 0) {
          taxMessage.textContent = 'Please enter a valid salary.';
          taxMessage.classList.remove('valid');
          taxMessage.style.color = '#d9534f';
          return;
        }
        const totalTax = calculateCumulativeTax(salaryValue);
        const salaryAfterTax = salaryValue - totalTax;
        if (totalTax === 0) {
          taxMessage.innerHTML = `<span class="tax-label">Total Tax:</span> Rs. 0<br/>No tax applicable on your salary.`;
        } else {
          taxMessage.innerHTML = `
            <span class="tax-label">Total Tax:</span> Rs. ${totalTax.toLocaleString(undefined, {maximumFractionDigits: 2})}<br/>
            <span class="tax-label">Salary After Tax Deduction:</span> Rs. ${salaryAfterTax.toLocaleString(undefined, {maximumFractionDigits: 2})}
          `;
        }
        taxMessage.classList.add('valid');
      });
    });

    businessBtn.addEventListener('click', () => {
      container.innerHTML = `<h1>Site Work Is Under Progress</h1><p id="progressMessage">We are currently working on the site.<br/>Please check back shortly.</p>`;
    });
  </script>
</body>
